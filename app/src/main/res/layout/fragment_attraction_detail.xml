<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.AttractionDetailFragment">

    <Button
        android:id="@+id/buttonAttractBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Back"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:videoId="S0Q4gqBUs7c"
        app:autoPlay="true"
        app:useWebUi="true" />

    <!--<WebView-->
        <!--android:id="@+id/webAttractYTVideo"-->
        <!--android:layout_marginTop="15dp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="3"></WebView>-->
    <TextView
        android:id="@+id/textAttractName"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attraction name"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        />
    
    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/textAttractDetailDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Detailed Desc"
        android:textColor="@android:color/black"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/textAttractPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: $100"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        />

</LinearLayout>